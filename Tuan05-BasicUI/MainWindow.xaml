<Window x:Class="Tuan05_BasicUI.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:Tuan05_BasicUI"
        mc:Ignorable="d"
        Title="Dashboard" Height="300" Width="400" WindowStartupLocation="CenterScreen" Loaded="Window_Loaded">
    <Canvas>
        <Image Width="50" Height="50" Source="Images/4.jpg"/>
        <Label Content="Welcome" FontSize="40" FontWeight="Bold" FontFamily="Arial" Canvas.Left="108" Canvas.Top="26"/>
        <Label Content="Họ và tên:" Canvas.Left="49" Canvas.Top="92" HorizontalAlignment="Left" VerticalAlignment="Center" />
        <TextBox Name="nameTextBox" Padding="5, 5, 0, 0" Width="240" Height="35" Canvas.Left="118" Canvas.Top="87" HorizontalAlignment="Left" VerticalAlignment="Center" />
        <Button Name="welcomeButton" Click="welcomeButton_Click" Width="80" Height="30" Canvas.Left="160" Canvas.Top="142" Content="Click me" HorizontalAlignment="Center" VerticalAlignment="Top"/>
        <Button x:Name="loginButton" Click="loginButton_Click" Width="80" Height="30" Canvas.Left="160" Canvas.Top="204" Content="Login" HorizontalAlignment="Left" VerticalAlignment="Top"/>
    </Canvas>
</Window>
